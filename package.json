{
  "name": "@sanji-io/ngx-material-window",
  "version": "0.0.0-development",
  "license": "MIT",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/Sanji-IO/ngx-material-window"
  },
  "bugs": {
    "url": "https://github.com/Sanji-IO/ngx-material-window/issues"
  },
  "author": {
    "name": "Zack Yang",
    "email": "zack9433@gmail.com"
  },
  "scripts": {
    "commitmsg": "validate-commit-msg",
    "commit": "git-cz",
    "docs": "npm run docs:build",
    "docs:build": "compodoc -p tsconfig.json -n test -d docs --hideGenerator",
    "docs:serve": "npm run docs:build -- -s",
    "docs:watch": "npm run docs:build -- -s -w",
    "ng": "ng",
    "lint": "tslint --project lib/src/tsconfig.es5.json lib/src/**/*.ts",
    "start": "ng serve",
    "build": "ng-packagr -p ng-package.json",
    "postbuild": "node scripts/postbuild.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:ci": "jest --runInBand",
    "prepublish-lib": "node scripts/prepublish.js",
    "semantic-release": "semantic-release pre && npm run prepublish-lib && npm publish dist && semantic-release post"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "engines": {
    "node": ">= 8",
    "npm": ">= 5"
  },
  "jest": {
    "preset": "jest-preset-angular",
    "globals": {
      "ts-jest": {
        "tsConfigFile": "lib/tsconfig.spec.json"
      },
      "__TRANSFORM_HTML__": true
    },
    "setupTestFrameworkScriptFile": "<rootDir>/lib/jest.ts",
    "testPathIgnorePatterns": ["/node_modules/", "jest.ts", "jest-global-mocks.ts"]
  },
  "dependencies": {
    "@angular/animations": "^5.1.1",
    "@angular/cdk": "^5.0.1",
    "@angular/common": "^5.1.1",
    "@angular/core": "^5.1.1",
    "@angular/flex-layout": "^2.0.0-beta.12",
    "@angular/material": "^5.0.1",
    "@ngui/overlay": "^0.8.0",
    "core-js": "^2.4.1",
    "rxjs": "^5.5.2",
    "zone.js": "^0.8.14"
  },
  "devDependencies": {
    "@angular/cli": "1.6.1",
    "@angular/compiler": "^5.1.1",
    "@angular/compiler-cli": "^5.1.1",
    "@angular/forms": "^5.1.1",
    "@angular/http": "^5.1.1",
    "@angular/language-service": "^5.1.1",
    "@angular/platform-browser": "^5.1.1",
    "@angular/platform-browser-dynamic": "^5.1.1",
    "@angular/router": "^5.1.1",
    "@types/jest": "^21.1.8",
    "codelyzer": "^4.0.2",
    "commitizen": "^2.9.6",
    "cpx": "^1.5.0",
    "cz-conventional-changelog": "^2.1.0",
    "husky": "^0.14.3",
    "jest": "^21.2.1",
    "jest-preset-angular": "^4.0.2",
    "ng-packagr": "^2.0.0-rc.7",
    "typescript": "~2.4.2",
    "validate-commit-msg": "^2.14.0",
    "semantic-release": "^8.2.0"
  }
}
